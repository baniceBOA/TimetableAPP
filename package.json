{
  "name": "timetable-web-md3-electron",
  "version": "3.2.0",
  "private": true,
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev:web": "vite",
    "dev": "concurrently npm:dev:web \"wait-on http://localhost:5173 && cross-env ELECTRON_START_URL=http://localhost:5173 electron .\"",
    "build:web": "vite build",
    "dist": "npm run build:web && electron-builder"
  },
  "build": {
    "appId": "com.example.timetable",
    "productName": "Timetable",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png"
    }
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.15.14",
    "@mui/material": "^5.15.14",
    "date-fns": "^3.6.0",
    "docx": "^8.0.2",
    "file-saver": "^2.0.5",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "nanoid": "^5.0.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-window": "^2.2.3"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^39.2.7",
    "electron-builder": "^24.9.3",
    "eslint-plugin-react-hooks": "^7.0.1",
    "vite": "^7.3.0",
    "wait-on": "^7.0.1"
  }
}
